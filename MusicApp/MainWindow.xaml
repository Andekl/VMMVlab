<Window x:Class="MusicApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:MusicApp.UI.View"
        mc:Ignorable="d"
        Title="Music" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2" FontSize="12">
            <MenuItem Header="Create">
                <MenuItem Header="New Album" Command="{Binding CreateNewAlbumCommand}"/>
            </MenuItem>
        </Menu>
        <view:NavigationView Grid.Row="1" DataContext="{Binding NavigationViewModel}"/>
        <view:AlbumDetailView Grid.Row="1" Grid.Column="1" DataContext="{Binding AlbumDetailViewModel}" Loaded="AlbumDetailView_Loaded"/>
    </Grid>
</Window>
